{
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "helm-requirements",
        "helm-values"
      ],
      "matchFileNames": [
        "services/helm/**/Chart.yaml",
        "services/helm/**/values.yaml"
      ],
      "enabled": true
    }
  ],
  "schedule": [
    "every tuesday"
  ]
}
